{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@newrelic-testing/server": ["test-packages/server/src/index.js"],
      "@newrelic/browser-agent": ["packages/browser-agent/src/index.ts"],
      "@newrelic/browser-agent-core/src/*": [
        "packages/browser-agent-core/src/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

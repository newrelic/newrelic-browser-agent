{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.js",
    "**/*.component-test.js",
    "**/__mocks__/*.js",
    "src/common/config/env.cdn.js",
    "src/loaders/configure/nonce.cdn.js",
    "src/loaders/configure/public-path.cdn.js"
  ]
}
